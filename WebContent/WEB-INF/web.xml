
<web-app>
  <description>Sistema de Reservas del Primavera</description>
  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/spring</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>

  <servlet>
    <servlet-name>WebActionRouterServlet</servlet-name>
    <servlet-class>leonards.common.web.framework.WebActionRouterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebActionRouterServlet</servlet-name>
    <url-pattern>/servlet/WebActionRouterServlet</url-pattern>
  </servlet-mapping>
  
</web-app>

